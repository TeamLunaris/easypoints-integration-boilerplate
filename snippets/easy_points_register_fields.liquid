    {%- assign class_input = class_input | default: '' -%}
    <label for="birthday" class="{{ class_label }}">
      {{ 'easypoints.note_form.birthday' | t }}
    </label>
    <input class="{{ class_input }}" type="date" value="" name="customer[note][birthday]" id="birthday" />
  {%- endif -%}
